# Unity Test Environment Dockerfile
# This Dockerfile creates an environment for testing Nexo components in Unity

FROM mcr.microsoft.com/dotnet/sdk:8.0

# Set environment variables
ENV UNITY_VERSION=2022.3.0f1
ENV UNITY_LICENSE=1

# Install system dependencies for Unity
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    git \
    unzip \
    xvfb \
    libgtk-3-0 \
    libx11-6 \
    libxrandr2 \
    libxinerama1 \
    libxcursor1 \
    libxi6 \
    libasound2 \
    libpulse0 \
    libdrm2 \
    libxkbcommon0 \
    libxss1 \
    libgl1-mesa-glx \
    libgl1-mesa-dri \
    libgles2-mesa \
    libegl1-mesa \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrender1 \
    libxtst6 \
    libnss3 \
    libcups2 \
    libdbus-1-3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libgdk-pixbuf2.0-0 \
    libpango-1.0-0 \
    libcairo2 \
    libpangocairo-1.0-0 \
    libx11-xcb1 \
    libxcb1 \
    libxcb-dri3-0 \
    libgbm1 \
    && rm -rf /var/lib/apt/lists/*

# Create Unity project directory
WORKDIR /workspace

# Copy test scripts
COPY tools/unity-test-runner.sh /usr/local/bin/unity-test-runner
RUN chmod +x /usr/local/bin/unity-test-runner

# Create Unity test environment setup script
COPY tools/setup-unity-test.sh /usr/local/bin/setup-unity-test.sh
RUN chmod +x /usr/local/bin/setup-unity-test.sh

# Create test runner script
COPY tools/run-unity-tests.sh /usr/local/bin/run-unity-tests.sh
RUN chmod +x /usr/local/bin/run-unity-tests.sh

# Set the default command
CMD ["/usr/local/bin/run-unity-tests.sh"] 