using System;
using System.Collections.Generic;
namespace Nexo.Core.Domain.ValueObjects
{
    public sealed record SprintId : IComparable<SprintId>
    {
        public Guid Value { get; }
        public SprintId(Guid value)
        {
            if (value == Guid.Empty)
                throw new ArgumentException("Sprint ID cannot be empty", nameof(value));
            Value = value;
        }
        public static SprintId New() => new(Guid.NewGuid());
        public static implicit operator Guid(SprintId id) => id.Value;
        public override string ToString() => Value.ToString();
        public int CompareTo(SprintId? other) => other is null ? 1 : Value.CompareTo(other.Value);
    }
}