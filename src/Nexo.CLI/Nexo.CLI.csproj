    <ProjectReference Include="../Nexo.Feature.Platform/Nexo.Feature.Platform.csproj" />
    <ProjectReference Include="../Nexo.Feature.Template/Nexo.Feature.Template.csproj" />
    <ProjectReference Include="../Nexo.Feature.Validation/Nexo.Feature.Validation.csproj" />
    <ProjectReference Include="../Nexo.Feature.Plugin/Nexo.Feature.Plugin.csproj" />
    <ProjectReference Include="../Nexo.Feature.Logging/Nexo.Feature.Logging.csproj" />
